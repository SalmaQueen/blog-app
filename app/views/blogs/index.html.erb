<div class="container">

<p id="notice"><%= notice %></p>
<div class="card">
<div class="content">
<h1 class="p-3">Blogs</h1>

<table border="1">
  <thead>
    <tr>
      <th><div class="p-2">Title:</div></th>
      <th><div class="p-2">Content:</div></th>
      <th colspan="3"><div class="p-2">Actions</div></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><div class="p-2"><%= blog.title %></div></td>
        <td><div class="p-2"><%= blog.content %></div></td>
        <td><div class="p-2"><%= link_to 'Show', blog %></div></td>
        <td><div class="p-2"><%= link_to 'Edit', edit_blog_path(blog) %></div></td>
        <td><div class="p-2"><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
</div>
</div>
</div>